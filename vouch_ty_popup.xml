<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="1.0"
        android:background="@drawable/border_round2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.1"
            android:background="@color/white"
            android:gravity="center|left"
            android:text="Filter Voucher Type"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/pop_tx1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="0.9"
            android:gravity="center"
            android:background="@drawable/close_24"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/daily_li1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="left"
        android:orientation="vertical">
        <CheckBox
            android:id="@+id/pop_ch1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kitchen Order"
            android:gravity="center|left"
            />
        <CheckBox
            android:id="@+id/pop_ch2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cash Item Sales"
            android:gravity="center|left"
            />
        <CheckBox
            android:id="@+id/pop_ch3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Credit Item Sales"
            android:gravity="center|left"
            />
        <CheckBox
            android:id="@+id/pop_ch4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cash Item Purchase"
            android:gravity="center|left"
            />
        <CheckBox
            android:id="@+id/pop_ch5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Credit Item Purchase"
            android:gravity="center|left"
            />
    </LinearLayout>
        <LinearLayout
            android:id="@+id/gpsbtnTakePicture"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:weightSum="1"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#FFFFFF"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/sal_or_b1"
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/button_layout"
                android:gravity="center|center"
                android:text="Apply"
                android:textAllCaps = "false"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/sal_or_b2"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:background="@drawable/button_layout1"
                android:text="Clear"
                android:layout_weight="0.5"
                android:textStyle="bold"
                android:textSize="15sp"
                android:gravity="center|center"
                android:textAllCaps = "false"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>