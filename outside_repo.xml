<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    >
    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:padding="2dp">
            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:weightSum="2">
                <View
                    android:layout_width="150dp"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:background="#000000"/>
                <TextView
                    android:gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:text="Search Option" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginRight="5dp"
                    android:background="#000000"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/replin1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/topless_border"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="#F4F0F0"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF"
                        android:gravity="center|right"
                        android:text="Search In:-"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                    <Spinner
                        android:id="@+id/reposp1"
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:entries="@array/sales_sear"
                        android:spinnerMode="dropdown" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <CheckBox
                        android:id="@+id/repoch1"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="Summarized By Waiter"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />
                    <CheckBox
                        android:id="@+id/repoch2"
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:text="Detail Item Info"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/replin2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="130dp"
                        android:layout_height="25dp"
                        android:orientation="horizontal"
                        android:background="@drawable/border"
                        >
                        <TextView
                            android:id="@+id/repotx1"
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:textStyle="italic"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:textColor="@android:color/black"
                            android:text="Unit:-1.25"
                            />
                        <Button
                            android:id="@+id/repobt1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/calander"
                            />
                    </LinearLayout>
                    <CheckBox
                        android:id="@+id/repoch3"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="To"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"/>
                    <LinearLayout
                        android:id="@+id/replin3"
                        android:layout_width="130dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/border"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/repotx2"
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:textStyle="italic"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:textColor="@android:color/black"
                            android:text="2022-7-29"
                            />
                        <Button
                            android:id="@+id/repobt2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/calander"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white"
        >
        <ScrollView
            android:layout_width="340dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:scrollbars="horizontal|vertical"
            android:scrollbarStyle="outsideInset"
            android:fillViewport="true"
            android:background="@drawable/border"
            >

            <HorizontalScrollView
                android:id="@+id/vouchhorizontalView"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal|vertical"
                android:layout_width="match_parent"
                android:layout_marginTop="5dip">

                <TableLayout
                    android:id="@+id/or_lis_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#C9D2F8"
                    android:isScrollContainer="true">
                    <TableRow
                        android:id="@+id/vouchrow1"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        >
                        <LinearLayout
                            android:layout_width="310dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/back_white"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="@android:color/black"
                                android:gravity="center"
                                android:text="No Data Has Found"
                                />
                        </LinearLayout>
                    </TableRow>

                    <TableRow
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        >

                        <LinearLayout
                            android:id="@+id/or_lis_lin_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/back_white"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="5dp"
                                >

                                <TextView
                                    android:layout_width="310dp"
                                    android:layout_height="match_parent"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:textColor="@android:color/black"
                                    android:gravity="center|left"
                                    android:text="Item Name:-Tibes"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                >

                                <TextView
                                    android:layout_width="90dp"
                                    android:layout_height="match_parent"
                                    android:textStyle="italic"
                                    android:textSize="14sp"
                                    android:gravity="center|left"
                                    android:textColor="@android:color/black"
                                    android:text="Unit:-1.25"
                                    />
                                <TextView
                                    android:layout_width="90dp"
                                    android:layout_height="match_parent"
                                    android:textStyle="italic"
                                    android:textSize="14sp"
                                    android:gravity="center|left"
                                    android:textColor="@android:color/black"
                                    android:text="Qty:-0.25"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textStyle="italic"
                                    android:textSize="14sp"
                                    android:textColor="@android:color/black"
                                    android:gravity="center|left"
                                    android:text="Price:-0.25"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="5dp"
                                >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:textColor="@android:color/black"
                                    android:gravity="center|left"
                                    android:text="Item Name:-Gored Tibes"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                >

                                <TextView
                                    android:layout_width="90dp"
                                    android:layout_height="match_parent"
                                    android:textStyle="italic"
                                    android:textSize="14sp"
                                    android:gravity="center|left"
                                    android:textColor="@android:color/black"
                                    android:text="Unit:-1.25"
                                    />
                                <TextView
                                    android:layout_width="90dp"
                                    android:layout_height="match_parent"
                                    android:textStyle="italic"
                                    android:textSize="14sp"
                                    android:gravity="center|left"
                                    android:textColor="@android:color/black"
                                    android:text="Qty:-0.25"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textStyle="italic"
                                    android:textSize="14sp"
                                    android:textColor="@android:color/black"
                                    android:gravity="center|left"
                                    android:text="Price:-0.25"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/round_corner1"
                                >

                                <TextView
                                    android:layout_width="130dp"
                                    android:layout_height="match_parent"
                                    android:textStyle="bold|italic"
                                    android:textSize="16sp"
                                    android:gravity="center|left"
                                    android:textColor="@android:color/black"
                                    android:text="Total Item:-2"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textStyle="bold|italic"
                                    android:textSize="14sp"
                                    android:gravity="center|left"
                                    android:textColor="@android:color/black"
                                    android:text="Total Price:-250.49"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                >

                                <TextView
                                    android:layout_width="160dp"
                                    android:layout_height="match_parent"
                                    android:textSize="10sp"
                                    android:gravity="center|left"
                                    android:textColor="@android:color/black"
                                    android:text="Waiter:-Yared Eshetu Shamena"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textSize="10sp"
                                    android:layout_marginLeft="5dp"
                                    android:textColor="@android:color/black"
                                    android:gravity="center|left"
                                    android:text="Time:-7-24-2022 12:30:45"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </TableRow>
                </TableLayout>
            </HorizontalScrollView>
        </ScrollView>
    </LinearLayout>
</LinearLayout>