<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white"
        >
        <ScrollView
            android:layout_width="340dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:scrollbars="horizontal|vertical"
            android:scrollbarStyle="outsideInset"
            android:fillViewport="true"
            android:background="@drawable/border"
            >

            <HorizontalScrollView
                android:id="@+id/vouchhorizontalView"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal|vertical"
                android:layout_width="match_parent"
                android:layout_marginTop="5dip">

                <TableLayout
                    android:id="@+id/or_lis_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#C9D2F8"
                    android:isScrollContainer="true">
                    <TableRow
                        android:id="@+id/vouchrow1"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        >
                        <LinearLayout
                            android:layout_width="310dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/back_white"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="@android:color/black"
                                android:gravity="center"
                                android:text="No Order Found"
                                />
                        </LinearLayout>
                    </TableRow>

                    <TableRow
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        >

                        <LinearLayout
                            android:id="@+id/or_lis_lin_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/back_white"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="5dp"
                                >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:textColor="@android:color/black"
                                    android:gravity="center|left"
                                    android:text="Item Name:-Tibes"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                >

                                <TextView
                                    android:layout_width="90dp"
                                    android:layout_height="match_parent"
                                    android:textStyle="italic"
                                    android:textSize="14sp"
                                    android:gravity="center|left"
                                    android:textColor="@android:color/black"
                                    android:text="Unit:-1.25"
                                    />
                                <TextView
                                    android:layout_width="90dp"
                                    android:layout_height="match_parent"
                                    android:textStyle="italic"
                                    android:textSize="14sp"
                                    android:gravity="center|left"
                                    android:textColor="@android:color/black"
                                    android:text="Qty:-0.25"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textStyle="italic"
                                    android:textSize="14sp"
                                    android:textColor="@android:color/black"
                                    android:gravity="center|left"
                                    android:text="Price:-0.25"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="5dp"
                                >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:textColor="@android:color/black"
                                    android:gravity="center|left"
                                    android:text="Item Name:-Gored Tibes"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                >

                                <TextView
                                    android:layout_width="90dp"
                                    android:layout_height="match_parent"
                                    android:textStyle="italic"
                                    android:textSize="14sp"
                                    android:gravity="center|left"
                                    android:textColor="@android:color/black"
                                    android:text="Unit:-1.25"
                                    />
                                <TextView
                                    android:layout_width="90dp"
                                    android:layout_height="match_parent"
                                    android:textStyle="italic"
                                    android:textSize="14sp"
                                    android:gravity="center|left"
                                    android:textColor="@android:color/black"
                                    android:text="Qty:-0.25"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textStyle="italic"
                                    android:textSize="14sp"
                                    android:textColor="@android:color/black"
                                    android:gravity="center|left"
                                    android:text="Price:-0.25"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/round_corner3"
                                >

                                <TextView
                                    android:layout_width="130dp"
                                    android:layout_height="match_parent"
                                    android:textStyle="bold|italic"
                                    android:textSize="14sp"
                                    android:gravity="center|left"
                                    android:textColor="@android:color/black"
                                    android:text="Total Item:-2"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textStyle="bold|italic"
                                    android:textSize="14sp"
                                    android:gravity="center|left"
                                    android:textColor="@android:color/black"
                                    android:text="Total Price:-250.49"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                >

                                <TextView
                                    android:layout_width="160dp"
                                    android:layout_height="match_parent"
                                    android:textSize="10sp"
                                    android:gravity="center|left"
                                    android:textColor="@android:color/black"
                                    android:text="Waiter:-Yared Eshetu Shamena"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textSize="10sp"
                                    android:layout_marginLeft="5dp"
                                    android:textColor="@android:color/black"
                                    android:gravity="center|left"
                                    android:text="Time:-7-24-2022 12:30:45"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/or_lis_lin_1_2"
                                android:layout_width="310dp"
                                android:layout_height="30dp"
                                android:orientation="horizontal"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                >
                                <TextView
                                    android:layout_width="140dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="5dp"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:gravity="center"
                                    android:textColor="@android:color/black"
                                    android:text="Order Done"
                                    android:background="@drawable/round_corner1"
                                    />
                                <TextView
                                    android:layout_width="70dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="5dp"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:gravity="center"
                                    android:textColor="@android:color/black"
                                    android:text="View"
                                    android:background="@drawable/round_corner"
                                    />
                                <TextView
                                    android:layout_width="70dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="5dp"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:gravity="center"
                                    android:textColor="@android:color/black"
                                    android:text="Cancel"
                                    android:background="@drawable/round_corner2"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </TableRow>
                </TableLayout>
            </HorizontalScrollView>
        </ScrollView>
    </LinearLayout>
</LinearLayout>